[
  {
    "playbook_id": "pb-ops-001",
    "name": "Run intake triage",
    "version": "1.0.0",
    "description": "Classifies incoming Run requests and applies governance checks.",
    "owner": "ops.lead",
    "created_at": "2024-01-10T09:00:00Z",
    "updated_at": "2024-02-10T12:30:00Z",
    "runtime": {
      "lane": "control-plane",
      "entrypoint": "triage.run_intake"
    },
    "inputs": ["run.request"],
    "outputs": ["run.summary", "governance.decision"],
    "governance": {
      "policy_id": "policy-governance-default",
      "level": "A1"
    },
    "steps": [
      {
        "step_id": "step-01",
        "name": "Validate request",
        "purpose": "Ensure the request is well-formed and traceable.",
        "action": "validate_schema",
        "inputs": ["run.request"],
        "outputs": ["validation.report"],
        "requires_human_approval": false
      },
      {
        "step_id": "step-02",
        "name": "Apply governance",
        "purpose": "Determine governance level and escalation needs.",
        "action": "governance_policy_check",
        "inputs": ["validation.report"],
        "outputs": ["governance.decision"],
        "requires_human_approval": true
      }
    ]
  },
  {
    "playbook_id": "pb-exec-004",
    "name": "Governed execution dispatch",
    "version": "0.9.2",
    "description": "Routes approved requests into the governed execution lane.",
    "owner": "platform.ops",
    "created_at": "2024-01-20T14:20:00Z",
    "updated_at": "2024-02-05T18:45:00Z",
    "runtime": {
      "lane": "governed-execution",
      "entrypoint": "dispatch.governed_execution"
    },
    "inputs": ["governance.decision"],
    "outputs": ["execution.request", "run.events"],
    "governance": {
      "policy_id": "policy-execution-sandbox",
      "level": "A2"
    },
    "steps": [
      {
        "step_id": "step-01",
        "name": "Prepare tool request",
        "purpose": "Hydrate tool manifests with approved inputs.",
        "action": "prepare_tool_manifest",
        "inputs": ["governance.decision"],
        "outputs": ["execution.request"],
        "requires_human_approval": false
      },
      {
        "step_id": "step-02",
        "name": "Dispatch execution",
        "purpose": "Trigger the governed execution lane.",
        "action": "dispatch_execution",
        "inputs": ["execution.request"],
        "outputs": ["run.events"],
        "requires_human_approval": false
      }
    ]
  }
]
