{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ExecutionSandbox",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "sandbox_id",
    "name",
    "version",
    "owner",
    "created_at",
    "updated_at",
    "execution_lane",
    "filesystem",
    "network",
    "environment",
    "resources",
    "logging"
  ],
  "properties": {
    "sandbox_id": {
      "type": "string",
      "pattern": "^[0-9A-Z]{26}$|^[0-9a-fA-F-]{36}$"
    },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "owner": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "execution_lane": { "type": "string", "enum": ["python"] },
    "filesystem": { "$ref": "#/$defs/filesystem" },
    "network": { "$ref": "#/$defs/network" },
    "environment": { "$ref": "#/$defs/environment" },
    "resources": { "$ref": "#/$defs/resources" },
    "logging": { "$ref": "#/$defs/logging" }
  },
  "$defs": {
    "filesystem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "read_paths", "write_paths"],
      "properties": {
        "mode": { "type": "string", "enum": ["read-only", "read-write", "deny-all"] },
        "read_paths": { "type": "array", "items": { "type": "string" } },
        "write_paths": { "type": "array", "items": { "type": "string" } }
      }
    },
    "network": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "allow_hosts", "allow_ports"],
      "properties": {
        "mode": { "type": "string", "enum": ["allowlist", "deny-all"] },
        "allow_hosts": { "type": "array", "items": { "type": "string" } },
        "allow_ports": { "type": "array", "items": { "type": "number", "minimum": 1 } }
      }
    },
    "environment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allowlist"],
      "properties": {
        "allowlist": { "type": "array", "items": { "type": "string" } }
      }
    },
    "resources": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cpu_cores", "memory_mb", "timeout_seconds"],
      "properties": {
        "cpu_cores": { "type": "number", "minimum": 0.1 },
        "memory_mb": { "type": "number", "minimum": 64 },
        "timeout_seconds": { "type": "number", "minimum": 1 }
      }
    },
    "logging": {
      "type": "object",
      "additionalProperties": false,
      "required": ["redact_patterns"],
      "properties": {
        "redact_patterns": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
