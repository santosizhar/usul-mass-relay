{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ToolManifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "manifest_id",
    "name",
    "version",
    "owner",
    "created_at",
    "updated_at",
    "tools"
  ],
  "properties": {
    "manifest_id": {
      "type": "string",
      "description": "Unique identifier (ULID or UUID).",
      "pattern": "^[0-9A-Z]{26}$|^[0-9a-fA-F-]{36}$"
    },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "owner": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/tool" }
    }
  },
  "$defs": {
    "governance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["level", "requires_hitl", "requires_run_logging"],
      "properties": {
        "level": { "type": "string", "enum": ["A0", "A1", "A2", "A3"] },
        "requires_hitl": { "type": "boolean" },
        "requires_run_logging": { "type": "boolean" }
      }
    },
    "contract": {
      "type": "object",
      "additionalProperties": false,
      "required": ["request_schema", "response_schema"],
      "properties": {
        "request_schema": {
          "type": "object",
          "additionalProperties": true,
          "required": ["type"],
          "properties": {
            "type": { "type": "string" }
          }
        },
        "response_schema": {
          "type": "object",
          "additionalProperties": true,
          "required": ["type"],
          "properties": {
            "type": { "type": "string" }
          }
        },
        "error_schema": {
          "type": "object",
          "additionalProperties": true,
          "required": ["type"],
          "properties": {
            "type": { "type": "string" }
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "timeout_seconds": { "type": "number", "minimum": 1 },
        "max_retries": { "type": "number", "minimum": 0 }
      }
    },
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "tool_id",
        "name",
        "description",
        "version",
        "execution_lane",
        "contract",
        "governance"
      ],
      "properties": {
        "tool_id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 },
        "execution_lane": { "type": "string", "enum": ["python"] },
        "contract": { "$ref": "#/$defs/contract" },
        "governance": { "$ref": "#/$defs/governance" },
        "constraints": { "$ref": "#/$defs/constraints" },
        "policy_refs": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
