{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RetrievalDocumentCatalog",
  "type": "object",
  "additionalProperties": false,
  "required": ["catalog_id", "name", "updated_at", "documents"],
  "properties": {
    "catalog_id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "updated_at": { "type": "string", "format": "date-time" },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "document_id",
          "collection_id",
          "title",
          "uri",
          "content_type",
          "excerpt",
          "tags",
          "checksum",
          "permissions",
          "version",
          "freshness"
        ],
        "properties": {
          "document_id": { "type": "string", "minLength": 1 },
          "collection_id": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "uri": { "type": "string", "minLength": 1 },
          "content_type": { "type": "string", "minLength": 1 },
          "excerpt": { "type": "string", "minLength": 1 },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "checksum": { "type": "string", "minLength": 1 },
          "permissions": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "visibility",
              "allowed_roles",
              "required_scopes",
              "policy_refs"
            ],
            "properties": {
              "visibility": {
                "type": "string",
                "enum": ["public", "restricted"]
              },
              "allowed_roles": {
                "type": "array",
                "items": { "type": "string" }
              },
              "required_scopes": {
                "type": "array",
                "items": { "type": "string" }
              },
              "policy_refs": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "version": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "version_id",
              "version_tag",
              "created_at",
              "updated_at",
              "source_system",
              "source_version"
            ],
            "properties": {
              "version_id": { "type": "string", "minLength": 1 },
              "version_tag": { "type": "string", "minLength": 1 },
              "created_at": { "type": "string", "format": "date-time" },
              "updated_at": { "type": "string", "format": "date-time" },
              "source_system": { "type": "string", "minLength": 1 },
              "source_version": { "type": "string", "minLength": 1 }
            }
          },
          "freshness": {
            "type": "object",
            "additionalProperties": false,
            "required": [],
            "properties": {
              "valid_from": { "type": "string", "format": "date-time" },
              "valid_to": { "type": "string", "format": "date-time" },
              "last_reviewed_at": { "type": "string", "format": "date-time" }
            }
          }
        }
      }
    }
  }
}
