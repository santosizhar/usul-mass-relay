{
  "playbook_id": "playbook-ops-triage",
  "name": "Ops intake triage",
  "version": "1.0.0",
  "description": "Triage operational requests, classify urgency, and prepare governed plans.",
  "owner": "project.ops-automation-studio",
  "created_at": "2025-02-10T00:00:00Z",
  "updated_at": "2025-02-10T00:00:00Z",
  "runtime": {
    "lane": "control-plane",
    "entrypoint": "projects/ops-automation-studio/workflows/ops-triage.workflow.md"
  },
  "inputs": [
    "request.summary",
    "request.requester",
    "request.systems"
  ],
  "outputs": [
    "triage.summary",
    "triage.urgency",
    "triage.recommendations"
  ],
  "governance": {
    "policy_id": "gov-policy-core",
    "level": "A1"
  },
  "steps": [
    {
      "step_id": "triage-collect",
      "name": "Collect intake context",
      "purpose": "Normalize intake details and capture scope.",
      "action": "summarize",
      "inputs": ["request.summary", "request.systems"],
      "outputs": ["triage.summary"],
      "requires_human_approval": false
    },
    {
      "step_id": "triage-classify",
      "name": "Classify urgency",
      "purpose": "Assign urgency level and routing guidance.",
      "action": "draft",
      "inputs": ["triage.summary"],
      "outputs": ["triage.urgency", "triage.recommendations"],
      "requires_human_approval": true
    }
  ]
}
