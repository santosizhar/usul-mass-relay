{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ops Automation Studio Project Config",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "project_id",
    "name",
    "version",
    "owner",
    "created_at",
    "updated_at",
    "governance_policy_id",
    "playbooks",
    "workflows",
    "integrations",
    "scenarios",
    "run_output"
  ],
  "properties": {
    "project_id": {
      "type": "string",
      "pattern": "^project-[a-z0-9-]+$"
    },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "owner": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "governance_policy_id": { "type": "string", "minLength": 1 },
    "playbooks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["playbook_id", "path", "lane", "purpose"],
        "properties": {
          "playbook_id": {
            "type": "string",
            "pattern": "^playbook-[a-z0-9-]+$"
          },
          "path": { "type": "string", "minLength": 1 },
          "lane": {
            "type": "string",
            "enum": ["control-plane", "governed-execution"]
          },
          "purpose": { "type": "string", "minLength": 1 }
        }
      }
    },
    "workflows": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["workflow_id", "path", "description"],
        "properties": {
          "workflow_id": {
            "type": "string",
            "pattern": "^workflow-[a-z0-9-]+$"
          },
          "path": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 }
        }
      }
    },
    "integrations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["integration_id", "path", "description"],
        "properties": {
          "integration_id": {
            "type": "string",
            "pattern": "^integration-[a-z0-9-]+$"
          },
          "path": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 }
        }
      }
    },
    "scenarios": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["scenario_id", "path", "summary"],
        "properties": {
          "scenario_id": {
            "type": "string",
            "pattern": "^scenario-[a-z0-9-]+$"
          },
          "path": { "type": "string", "minLength": 1 },
          "summary": { "type": "string", "minLength": 1 }
        }
      }
    },
    "run_output": {
      "type": "object",
      "additionalProperties": false,
      "required": ["storage_provider_id", "namespace_id"],
      "properties": {
        "storage_provider_id": { "type": "string", "minLength": 1 },
        "namespace_id": { "type": "string", "minLength": 1 }
      }
    }
  }
}
