{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ops Automation Studio Mock Integrations",
  "type": "object",
  "additionalProperties": false,
  "required": ["catalog_id", "name", "version", "owner", "created_at", "updated_at", "integrations"],
  "properties": {
    "catalog_id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "owner": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "integrations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["integration_id", "name", "system", "purpose", "mock_endpoints"],
        "properties": {
          "integration_id": {
            "type": "string",
            "pattern": "^integration-[a-z0-9-]+$"
          },
          "name": { "type": "string", "minLength": 1 },
          "system": { "type": "string", "minLength": 1 },
          "purpose": { "type": "string", "minLength": 1 },
          "mock_endpoints": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["endpoint_id", "method", "path", "description"],
              "properties": {
                "endpoint_id": { "type": "string", "minLength": 1 },
                "method": { "type": "string", "minLength": 1 },
                "path": { "type": "string", "minLength": 1 },
                "description": { "type": "string", "minLength": 1 }
              }
            }
          }
        }
      }
    }
  }
}
