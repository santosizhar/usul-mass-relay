{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ops Automation Studio Demo Scenarios",
  "type": "object",
  "additionalProperties": false,
  "required": ["catalog_id", "name", "version", "owner", "created_at", "updated_at", "scenarios"],
  "properties": {
    "catalog_id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "owner": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "scenarios": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "scenario_id",
          "name",
          "summary",
          "playbooks",
          "workflows",
          "mock_integrations",
          "expected_runs"
        ],
        "properties": {
          "scenario_id": {
            "type": "string",
            "pattern": "^scenario-[a-z0-9-]+$"
          },
          "name": { "type": "string", "minLength": 1 },
          "summary": { "type": "string", "minLength": 1 },
          "playbooks": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "pattern": "^playbook-[a-z0-9-]+$" }
          },
          "workflows": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "pattern": "^workflow-[a-z0-9-]+$" }
          },
          "mock_integrations": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "pattern": "^integration-[a-z0-9-]+$" }
          },
          "expected_runs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["run_stage", "governance_level", "artifacts"],
              "properties": {
                "run_stage": { "type": "string", "minLength": 1 },
                "governance_level": {
                  "type": "string",
                  "enum": ["A0", "A1", "A2", "A3"]
                },
                "artifacts": {
                  "type": "array",
                  "minItems": 1,
                  "items": { "type": "string", "minLength": 1 }
                }
              }
            }
          }
        }
      }
    }
  }
}
